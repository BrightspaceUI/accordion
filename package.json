{
  "name": "d2l-accordion",
  "version": "0.0.1",
  "description": "Polymer-based accordion component",
  "scripts": {
    "postinstall": "polymer install --variants",
    "start": "polymer serve",
    "test": "npm run test:lint && npm run test:polymer:local",
    "test:lint": "npm run test:lint:js && npm run test:lint:wc",
    "test:lint:js": "eslint *.html test/*.html demo/*.html",
    "test:lint:wc": "polymer lint",
    "test:polymer:local": "polymer test --skip-plugin sauce",
    "test:polymer:sauce": "polymer test --skip-plugin local"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BrightspaceUI/accordion"
  },
  "author": "D2L",
  "license": "Apache-2.0",
  "devDependencies": {
    "bower-art-resolver": "^2.0.6",
    "eslint": "^4.15.0",
    "eslint-config-brightspace": "^0.4.0",
    "eslint-plugin-html": "^4.0.1",
    "polymer-cli": "^1.9.1"
  }
}
